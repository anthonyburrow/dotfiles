[colors]
background = ${xrdb:background}
background-alt = #00000000
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
accent1 = ${xrdb:color5}

[bar/main]
;monitor = ${env:MONITOR:HDMI-2}

width = 100%
height = 25
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Source Code Pro:size=11:antialias=true;2
font-1 = SauceCodePro NF:style=Regular:antialias=true:size=16;4

line-size = 3
line-color = #f00

border-size = 0
border-color = ${colors.background}

padding-left = 0
padding-right = 2

module-margin-left = 3
module-margin-right = 2

modules-left = i3
modules-center = date
modules-right = wlan battery

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

;override-redirect = true


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.accent1}

; focused = Active workspace on focused monitor
label-focused = 
;label-focused-background = ${colors.accent1}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = 
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
;label-visible = %icon%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
;label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = 
label-urgent-background = ${colors.foreground}
label-urgent-padding = ${colors.foreground}

; Separator in between workspaces
;label-separator = /


[module/battery]
type = internal/battery

full-at = 98

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

poll-interval = 5

time-format = %H:%M

; Available tags:
;   <label-(dis)charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-(dis)charging>
format-charging = <ramp-capacity> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full>

label-charging = ﯢ
label-discharging = %percentage%%
label-full =  %percentage%%

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %{A1:nm-applet:}%essid%%{A}

format-disconnected = %{A1:killall nm-applet:}{A}

ramp-signal-0 = %{A1:killall nm-applet:}直%{A}
ramp-signal-1 = %{A1:killall nm-applet:}直%{A}
ramp-signal-2 = %{A1:killall nm-applet:}直%{A}
ramp-signal-3 = %{A1:killall nm-applet:}直%{A}
ramp-signal-4 = %{A1:killall nm-applet:}直%{A}
ramp-signal-foreground = ${colors.foreground}


[module/date]
type = internal/date
interval = 1

date = %A
date-alt = " %Y-%m-%d"

time = %I:%M %p
time-alt = %I:%M:%S

format-prefix-foreground = ${colors.foreground}

label = %date% %time%


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over


[global/wm]
margin-top = 5
margin-bottom = 5
