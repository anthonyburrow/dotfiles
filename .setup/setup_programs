#!/usr/bin/env bash
set -e

echo "[*] Installing programs..."

sudo pacman -S --needed --noconfirm \
    i3-wm \
    xorg-server \
    xorg-xinit \
    xorg-xrandr \
    rxvt-unicode \
    feh \
    rofi \
    nerd-fonts \
    noto-fonts \
    ttf-fira-code \
    pulseaudio \
    pulsemixer \
    firefox \
    discord \
    zip \
    unzip \
    vim \
    gnome-keyring \
    libsecret \
    scrot \
    redshift \

yay -S --needed --noconfirm \
    polybar \
    visual-studio-code-bin \
    slack-desktop \

echo "Done."